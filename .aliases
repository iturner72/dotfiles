# This is iturner72's .aliases file which is called by .bashrc

###### Clear and ls commands #####
alias cla="clear && ls -A"
alias cls="clear && ls"
alias cll="clear && ls -alF"
alias la="ls -A"
alias ll="ls -alF"
alias clc="clear"

###### Directory Navigation #####
alias ..="cd .."
alias ...="cd ..; cd .."

##### X server #####
alias xdt="export DISPLAY=192.168.1.71:2.0"
alias xlt="export DISPLAY=192.168.1.85:2.0"

##### mv and rm protection #####
alias mv="mv -i"
alias rm="rm -i"

##### cp clarity #####
alias cp='cp -iv'

##### screenfetch #####
alias info='clear && screenfetch'

##### source bashrc #####
alias sb='source ~/.bashrc'

##### find and edit a file with fzf #####
alias ffe='fzf_find_edit.sh'

##### power and sleep #####
alias sleep='sudo systemctl suspend'

##### ouster data visualization #####
alias lidarplay='roslaunch ouster_ros os1.launch replay:=true image:=true lidar_mode:=2048x10'

#### lock screen on arch ####
alias lk='i3lock -c 000000'

#### tmux attach ####
alias ta='tmux attach'

#### git (i know) ####
alias gits='clear && git status'
alias gitl='clear && git log --oneline'
