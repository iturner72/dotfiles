# This is my version controlled .bash_aliases file 

###### Clear and ls commands #####
alias cla="clear && ls -A"
alias cls="clear && ls"
alias cll="clear && ls -alF"
alias la="ls -A"
alias ll="ls -alF"
alias clc="clear"

##### mv and rm protection #####
alias mv="mv -i"
alias rm="rm -i"

##### cp clarity #####
alias cp='cp -iv'

##### screenfetch #####
alias info='clear && screenfetch'
